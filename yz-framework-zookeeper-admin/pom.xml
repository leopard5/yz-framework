<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.yz</groupId>
		<artifactId>yz-framework</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	<artifactId>yz-framework-zookeeper-admin</artifactId>
	<packaging>war</packaging>
	<name>yz-framework-zookeeper-admin Maven Webapp</name>
	<url>http://maven.apache.org</url>

	<dependencies>
		<dependency>
			<groupId>com.yz</groupId>
			<artifactId>yz-framework-zookeeper</artifactId>
			<version>${com.yz.frameowrk.version}</version>
		</dependency>
		<dependency>
			<groupId>com.yz</groupId>
			<artifactId>yz-framework-config</artifactId>
			<version>${com.yz.frameowrk.version}</version>
		</dependency>
		<dependency>
			<groupId>com.alibaba</groupId>
			<artifactId>fastjson</artifactId>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>2.5</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context-support</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-web</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-webmvc</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-test</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.velocity</groupId>
			<artifactId>velocity</artifactId>
			<version>1.7</version>
		</dependency>
		<dependency>
			<groupId>org.apache.velocity</groupId>
			<artifactId>velocity-tools</artifactId>
			<version>2.0</version>
		</dependency>
		<dependency>
			<groupId>commons-collections</groupId>
			<artifactId>commons-collections</artifactId>
		</dependency>
	</dependencies>
	<profiles>
		<profile>
			<id>local</id>
			<properties>
				<zoo.hosts>myServer:2181</zoo.hosts>
			</properties>
		</profile>
		<profile>
			<id>dev</id>
			<properties>
				<zoo.hosts>192.168.3.102:2181</zoo.hosts>
			</properties>
		</profile>
		<profile>
			<id>test</id>
			<properties>
				<zoo.hosts>192.168.3.107:2181</zoo.hosts>
			</properties>
		</profile>

		<profile>
			<id>test-trunk</id>
			<properties>
				<zoo.hosts>192.168.3.115:2181</zoo.hosts>
			</properties>
		</profile>


		<profile>
			<id>prd</id>
			<properties>
				<zoo.hosts>172.16.16.73:2181</zoo.hosts>
			</properties>
		</profile>
	</profiles>
	<build>
		<finalName>zk-admin</finalName>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>tomcat-maven-plugin</artifactId>
				<version>1.1</version>
				<configuration>
					<url>http://myserver:8080/manager/html</url>
					<path>/zk-admin</path>
					<port>9090</port>
					<uriEncoding>UTF-8</uriEncoding>
					<server>tomcat</server>
				</configuration>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>*.properties</include>
					<include>**/*.properties</include>
					<include>log4j.xml</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
				<includes>
					<include>**</include>
				</includes>
			</resource>
		</resources>
	</build>
</project>
